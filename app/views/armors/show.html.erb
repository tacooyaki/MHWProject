<h1><%= @armor.name %></h1>
<p>Type: <%= @armor.type %></p>
<p>Defense: <%= @armor.defense %></p>
<p>Rank: <%= @armor.rank %></p>

<% if @armor.skills.present? %>
  <p>Skills:</p>
  <ul>
    <% @armor.skills.each do |skill| %>
      <li><%= "#{skill['name']}: #{skill['description']}" %></li>
    <% end %>
  </ul>
<% end %>


<% if @armor.resistances.present? %>
  <p>Resistances:</p>
  <ul>
    <% @armor.resistances.each do |type, value| %>
      <li><%= "#{type.capitalize}: #{value}" %></li>
    <% end %>
  </ul>
<% end %>

<% if @armor.slots.present? %>
  <p>Slots:</p>
  <ul>
    <% @armor.slots.each do |slot| %>
      <li>Rank: <%= slot["rank"] %></li>
    <% end %>
  </ul>
<% end %>

<% if @armor.armor_crafting_materials.present? %>
  <p>Crafting Materials:</p>
  <ul>
    <% @armor.armor_crafting_materials.each do |crafting_material| %>
      <li><%= "#{crafting_material.crafting_material.name}: #{crafting_material.quantity}" %></li>
    <% end %>
  </ul>
<% end %>


<%= link_to 'Back to All Armors', armors_path %>
